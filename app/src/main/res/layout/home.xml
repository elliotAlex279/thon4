<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/weather_card"
        app:cardBackgroundColor="@color/teal_500"
        app:cardCornerRadius="9dp"
        app:cardElevation="5dp"
        android:clickable="true"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_margin="28dp"
            android:id="@+id/loaderWeather"
            android:visibility="visible"
            android:indeterminateTint="@color/white"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <TableLayout
            android:visibility="gone"
            android:id="@+id/loadedWeather"
            android:padding="8dp"
            android:stretchColumns="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow tools:ignore="UselessParent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/curTempImg"
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:id="@+id/temp_curr"
                        android:textSize="22sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/temp_stat"
                        android:textSize="12.5sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:paddingVertical="8dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <TableLayout
                        android:stretchColumns="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TableRow android:layout_gravity="top" android:layout_marginBottom="4dp">
                            <TextView
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:visibility="gone"
                                android:paddingStart="8dp"
                                android:id="@+id/sunrise_time"
                                android:textSize="18sp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlSymmetry" />
                            <ProgressBar
                                android:layout_weight="1"
                                android:id="@+id/sunrise_loader"
                                android:indeterminateTint="@color/white"
                                android:layout_width="0dp"
                                android:layout_height="18dp" />


                            <TextView
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:visibility="gone"
                                android:paddingStart="8dp"
                                android:textSize="18sp"
                                android:id="@+id/sunset_time"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlSymmetry" />
                            <ProgressBar
                                android:id="@+id/sunset_loader"
                                android:indeterminateTint="@color/white"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="18dp" />
                        </TableRow>
                        <TableRow android:layout_gravity="bottom" android:layout_marginTop="4dp">
                            <TextView
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:visibility="gone"
                                android:paddingStart="8dp"
                                android:id="@+id/hum_data"
                                android:textSize="18sp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlSymmetry" />
                            <ProgressBar
                                android:layout_weight="1"
                                android:id="@+id/hum_loader"
                                android:indeterminateTint="@color/white"
                                android:layout_width="0dp"
                                android:layout_height="18dp" />


                            <TextView
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:visibility="gone"
                                android:paddingStart="8dp"
                                android:textSize="18sp"
                                android:id="@+id/uv_text"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="RtlSymmetry" />
                            <ProgressBar
                                android:id="@+id/uv_loader"
                                android:indeterminateTint="@color/white"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="18dp" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </com.google.android.material.card.MaterialCardView>
    <TableLayout
        android:shrinkColumns="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_marginEnd="5.5dp"
        android:layout_weight="1"
        android:id="@+id/curr_unit_card"
        app:cardCornerRadius="9dp"
        app:cardBackgroundColor="#F06292"
        app:cardElevation="5dp"
        android:clickable="false"
        android:layout_height="140dp"
        android:layout_marginTop="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:text="Current Generation"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:gravity="center"
                android:padding="16dp"
                android:id="@+id/curr_unit_gen"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ProgressBar
                android:layout_marginVertical="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/updt_curGen_prg"
                android:indeterminate="true"
                android:indeterminateTint="@color/white"
                />
                <TextView
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:id="@+id/curr_last_updated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="5.5dp"
                android:id="@+id/tot_unit_card"
                app:cardCornerRadius="9dp"
                app:cardBackgroundColor="#7e57c2"
                app:cardElevation="5dp"
                android:clickable="false"
                android:layout_height="140dp"
                android:layout_marginTop="16dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:text="Total Generation"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:visibility="gone"
                        android:gravity="center"
                        android:padding="24dp"
                        android:id="@+id/tot_unit_gen"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ProgressBar
                        android:layout_marginVertical="16dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tot_curGen_prg"
                        android:indeterminate="true"
                        android:indeterminateTint="@color/white"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </TableRow>
        <TableRow android:layout_marginTop="16dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="255dp">
            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/chart"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            </com.google.android.material.card.MaterialCardView>
        </TableRow>
    </TableLayout>
</LinearLayout>